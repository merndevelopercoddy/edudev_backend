<div class="container">
  <div class="row">
    <div class="col-lg-6 mx-auto rounded shadow p-3">
      <h2 class="text-center">Reja qo'shish</h2>
      <form action="/admin/kurs_reja/{{id}}/add" class="table" method="POST">
        <div class="col-md-12">
          <label for="validationCustom01" class="form-label">Sarlavha</label>
          <input
            name="title"
            type="text"
            class="form-control"
            id="validationCustom01"
            required=""
          />
        </div>
        <div class="col-md-12">
          <label for="validationCustom02" class="form-label">Joylashuv tartibi</label>
          <input
            name="position"
            type="number"
            class="form-control"
            id="validationCustom02"
            required=""
          />
        </div>
        <input type="submit" value="Saqlash" class="btn btn-primary mt-3">
      </form>
    </div>
  </div>
</div>

