<div class="container">
  <div class="row">
    <div class="col-lg-6 mx-auto">
      <h1 class="text-center">Kategoriya qo‘shish</h1>
      <form
        class="row g-3 needs-validation  shadow rounded-4 p-3 my-4"
        novalidate=""
        action="/admin/category/add"
        method="POST"
      >
        <div class="col-md-12">
          <label for="validationCustom01" class="form-label">Kategoriya nomi</label>
          <input
            name="category_name"
            type="text"
            class="form-control"
            id="validationCustom01"
            required=""
          />
        </div>
        <input class="btn btn-primary mt-4 mb-2" type="submit" value="Saqlash" />
      </form>
    </div>
  </div>
</div>




<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
            <div class="card-body">
              <h5 class="card-title">Kategoriyalar</h5>
              <!-- Table with stripped rows -->
              <table class="table datatable">
                <thead>
                  <tr>
                    <th>
                      <b>№</b>
                    </th>
                    <th>Kategoriya nomi</th>
                    <th>Kategoriya ID</th>
                    <th>Tahrirlash</th>
                  </tr>
                </thead>
                <tbody>
                {{#each category}}
                    <tr>
                        <td>{{inc @index}}</td>
                        <td>{{category_name}}</td>
                        <td>{{category_uuid}}</td>
                        <td>
                          <a class="btn btn-primary" href="/admin/category/{{category_uuid}}">Tahrilash</a>
                        </td>
                    </tr>
                {{/each}}
                </tbody>
              </table>
              <!-- End Table with stripped rows -->

            </div>
          </div>
        </div>
    </div>
</div>